        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
    ),
    'primary key' => array('oid', 'nid'),
  );

  return $schema;
}

/**
 * Implements hook_uninstall
 */
function cstore_uninstall() {
  db_drop_table('cstore_order');
  db_drop_table('cstore_order_details');
}